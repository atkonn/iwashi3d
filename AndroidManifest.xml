<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="jp.co.qsdn.android.iwashi3d"
  android:versionCode="1"
  android:versionName="1.0.0">
  <application android:label="@string/app_name">
    <service android:name=".AtlantisService"
      android:label="@string/service_name"
      android:permission="android.permission.BIND_WALLPAPER"
      android:launchMode="singleTask">
      <intent-filter>
        <action android:name="android.service.wallpaper.WallpaperService" />
      </intent-filter>
      <meta-data android:name="android.service.wallpaper"
        android:resource="@xml/wallpaper" />
    </service>
    <activity
      android:name="jp.co.qsdn.android.atlantis.SettingActivity"
      android:label="@string/setting_title"
      android:launchMode="singleTask">
      <intent-filter>
        <action
          android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.DEFAULT" />
      </intent-filter>
    </activity>
    <receiver android:name="AtlantisBroadcastReceiver">
      <intent-filter>
        <action android:name="android.intent.action.BOOT_COMPLETED"/>
      </intent-filter>
    </receiver>
  </application>
  <user-sdk android:minSdkVersion="7" android:targetSdkVersion="9" />
  <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
</manifest> 
